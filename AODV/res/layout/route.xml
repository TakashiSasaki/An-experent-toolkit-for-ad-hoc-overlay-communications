<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	android:orientation="vertical"android:layout_width="fill_parent"android:layout_height="fill_parent">
	
    <LinearLayout android:layout_width="fill_parent" android:id="@+id/linearLayout1" android:layout_height="wrap_content">
    	<TextView android:text="Search\nDest" android:id="@+id/textView1" android:layout_width="wrap_content"
    		android:layout_height="wrap_content"></TextView>	
    
		<EditText android:id="@+id/search_addressPart1"
			android:layout_width="wrap_content" 
			android:digits="1234567890" android:layout_height="fill_parent"></EditText>
		<TextView android:text="." android:id="@+id/textView1" android:layout_width="wrap_content"
			android:layout_height="wrap_content"></TextView>
		
		<EditText android:id="@+id/search_addressPart2"
			android:layout_height="wrap_content" android:layout_width="wrap_content" 
			android:digits="1234567890"></EditText>
		<TextView android:text="." android:id="@+id/textView2" android:layout_width="wrap_content"
			android:layout_height="wrap_content"></TextView>
		
		<EditText android:id="@+id/search_addressPart3"
			android:layout_height="wrap_content" android:layout_width="wrap_content" 
			android:digits="1234567890"></EditText>
		<TextView android:text="." android:id="@+id/textView3" android:layout_width="wrap_content"
			android:layout_height="wrap_content"></TextView>		
		
		
		<EditText android:id="@+id/search_addressPart4"
			android:layout_height="wrap_content" android:layout_width="wrap_content" 
			android:digits="1234567890"></EditText>
			
		<LinearLayout android:id="@+id/linearLayout2" android:layout_height="fill_parent" android:layout_width="wrap_content" android:orientation="vertical">
			<TextView android:text="available" 
				android:id="@+id/textView4" android:layout_width="wrap_content" 
				android:layout_height="wrap_content"></TextView>
			<CheckBox
				android:id="@+id/checkBox1" android:layout_width="wrap_content" 
				android:layout_height="wrap_content" android:layout_marginLeft="7dp"></CheckBox>
		</LinearLayout>
		<Button android:text="Reload" android:id="@+id/reload" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
				
		
    </LinearLayout>
	<ListView android:id="@+id/list" android:layout_width="fill_parent" android:layout_height="wrap_content"></ListView>
	
</LinearLayout>
