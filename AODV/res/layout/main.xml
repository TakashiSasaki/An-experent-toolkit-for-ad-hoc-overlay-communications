		<Button android:layout_height="wrap_content" android:id="@+id/buttonClear" android:text="Clear" android:layout_width="0dip" android:layout_weight="1"></Button>
		<Button android:layout_height="wrap_content" android:id="@+id/buttonShowRouteTable"  android:text="ShowRoute" android:layout_width="0dip" android:layout_weight="1" ></Button>
